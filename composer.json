{
    "name": "yieldstudio/tailwind-merge-php",
    "description": "Merge Tailwind CSS classes without style conflicts",
    "license": "MIT",
    "keywords": [
        "tailwindcss",
        "tailwind",
        "css",
        "merge",
        "conflict",
        "override",
        "classlist",
        "laravel",
        "php"
    ],
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "YieldStudio\\TailwindMerge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YieldStudio\\TailwindMerge\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "James Hemery",
            "email": "james@yieldstudio.fr"
        }
    ],
    "scripts": {
        "lint": "pint",
        "test": "pest",
        "types": "phpstan analyse"
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.2",
        "illuminate/support": "^10.4",
        "laravel/pint": "^1.10",
        "phpstan/phpstan": "^1.10"
    },
    "suggest": {
        "illuminate/support": "Required to use with Laravel."
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YieldStudio\\TailwindMerge\\Laravel\\TailwindMergeServiceProvider"
            ]
        }
    }
}
